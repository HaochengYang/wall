@model wall.Models.LogUser
<div>
    @{
        foreach(var error in ViewBag.errors)
        {

            if(@error.Errors.Count > 0)
            {
                <p>@error.Errors[0].ErrorMessage</p>
            }
        }
    }
</div>
@{
    ViewData["Title"] = "Home Page";
}

<div class="logreg">
  <h2>Login</h2>
  <a href="/Register">Don't have an account yet?</a>
  <form asp-controller="User" asp-action="Login" method="POST">
    <label asp-for="username"></label>
    <input type="text" name="username">
    <p><span style="color: red" asp-validation-for="username"></span></p>

    <label asp-for="password"></label>
    <input type="password" name="password">
    <p><span style="color: red" asp-validation-for="password"></span></p>

    <input type="submit" value="Login">
  </form>
</div>